- secound_color = Idea::FRONT_COLORS.select{|v| v.first == idea.color} || []
- btn_color = secound_color.first.try(:last) || darken_color(idea.color, 0.2)
%li.col-md-4
  .thumbnail{style: "padding: 0;background: #{idea.color}; color:white;"}
    %div
      %img{alt: "#{idea.name}", src: "#{idea.picture.url(:medium)}", style: "width: 100%;max-height: 232px;"}/
    .caption.text-center
      %h2.text-center{style: "color: white;"}= idea.name
      = link_to idea, class: "btn btn-primary btn-lg", style: "background: #{btn_color}; border-color: #{btn_color};margin-bottom: 1em;" do
        Wybieram