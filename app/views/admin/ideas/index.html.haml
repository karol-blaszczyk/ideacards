%h3 Pomysły
.widget
  %table.table.table-condensed
    %thead
      %tr
        %th Nazwa
        %th Obrazek
        %th Opis
        %th --
        %th
    %tbody
      - @ideas.each do |idea|
        %tr
          %td= link_to idea.name, admin_idea_path(idea)
          %td= image_tag idea.picture.url(:thumb), :class => "img-rounded", :style => "max-width: 100px;"
          %td= idea.description

          %td
            = link_to "Usuń", admin_idea_path(idea), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger' 
            = link_to "Edytuj", edit_admin_idea_path(idea), :class => 'btn btn-info'
    
    = link_to 'Dodaj Pomysł', new_admin_idea_path, :class => "btn btn-primary"

