.container
  %h2 Moje konto
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put}) do |f|
    = f.error_notification
    .row
      .col-sm-6.col-md-4.well.form-inputs
        %h2 Edytuj dane
        = f.input :name, :autofocus => true, label: 'Imię i nazwisko'
        = f.input :email, :required => true
      .col-sm-6.col-md-4.well.form-inputs
        %h2 Zmień hasło
        = f.input :password, :autocomplete => "off", :required => false, label: 'Hasło'
        = f.input :password_confirmation, :required => false, label: 'Powtórz hasło'

    .row
      .col-sm-6.col-md-4 
        = f.input :current_password, :hint => "musisz podać hasło by zmienic dane", :required => true, label: 'Aktualne hasło'
        = f.button :submit, 'Aktualizuj', :class => 'btn-primary'